<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solidleafbg"
    tools:context=".AngsuranKolektifActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#118334">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/imageButtonBackAngsuranKolektifPosting"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/abc_vector_test"
                    android:contentDescription="@string/back"
                    app:srcCompat="@drawable/abc_vector_test"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/txtHeaderAngsuranKolektifPosting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/imageButtonNextAngsuranKolektifPosting"
                    android:layout_toEndOf="@id/imageButtonBackAngsuranKolektifPosting"
                    android:text="@string/RekeningAsal"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButtonNextAngsuranKolektifPosting"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:drawable/ic_menu_send"
                    android:contentDescription="@string/next"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFDB5D"
            android:gravity="center_horizontal|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:contentDescription="@string/app_name"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewAngsuranKolektifPosting"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/mylogo_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewinstitutionNameAngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/courgette"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTabIDAngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:paddingTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNamadiAngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewAlamatdiAngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewSaldodiAngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_PilihAutoDebet_AngsuranKolektifPosting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:text="@string/PilihAutoDebet"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textColorHighlight="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spDaftarKodeAutoDebet_AngsuranKolektifPosting"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:contentDescription="@string/DaftarAutoDebet"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:popupBackground="#FFFFFF"
                    android:spinnerMode="dialog" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_InputNoRekening_AngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:text="@string/rekening_tujuan"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextNoRekening_AngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:enabled="false"
                        android:hint="@string/input_no_rek_tujuan"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/material_dynamic_neutral0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_InputAutoDebetID_AngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:text="@string/AutoDebetID"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextAutoDebetID_AngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:enabled="false"
                        android:hint="@string/AutoDebetID"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/material_dynamic_neutral0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Berita_TransferOnline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="5dp"
                        android:text="@string/Angsuran1"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:visibility="visible" />

                    <EditText
                        android:id="@+id/editTextAngsuran_AngsuranKolektifPosting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:enabled="false"
                        android:hint="@string/Angsuran1"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@color/material_dynamic_neutral0"
                        android:textSize="18sp"
                        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_InputDaftarRekening_TransferOnline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        android:text="@string/JumlahBayar"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary">

                        <ImageButton
                            android:id="@+id/imageButtonSubstractAmount_AngsuranKolektifPosting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/minussign"
                            android:scaleType="center"
                            app:srcCompat="@drawable/minussign"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/editTextAmount_AngsuranKolektifPosting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_toStartOf="@id/imageButtonAddAmount_AngsuranKolektifPosting"
                            android:layout_toEndOf="@id/imageButtonSubstractAmount_AngsuranKolektifPosting"
                            android:background="#FFFFFF"
                            android:enabled="false"
                            android:hint="@string/InputNominal"
                            android:inputType="number"
                            android:padding="7dp"
                            android:textAlignment="center"
                            android:textColor="@color/material_dynamic_neutral0"
                            android:textSize="18sp"
                            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

                        <ImageButton
                            android:id="@+id/imageButtonAddAmount_AngsuranKolektifPosting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@android:drawable/ic_input_add"
                            android:padding="7dp"
                            android:scaleType="center"
                            app:srcCompat="@android:drawable/ic_input_add"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </TableRow>




    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>